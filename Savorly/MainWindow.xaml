<Window x:Class="Savorly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Savorli" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="#CC5500"/>
                    <Setter Property="Background" Value="#FFF5E6"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="20,15">
            <StackPanel HorizontalAlignment="Center">
            </StackPanel>
        </Border>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <Border Grid.Row="2" Background="White" Padding="10,8" BorderBrush="#E8E8E8" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="FoodBtn" Grid.Column="0" Style="{StaticResource NavButtonStyle}"
                           Checked="FoodBtn_Checked" GroupName="NavButtons">
                    <StackPanel Orientation="Vertical" Margin="5,4" Width="60">
                        <TextBlock Text="🍳" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Страви" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="DrinksBtn" Grid.Column="1" Style="{StaticResource NavButtonStyle}"
                           Checked="DrinksBtn_Checked" GroupName="NavButtons">
                    <StackPanel Orientation="Vertical" Margin="5,4" Width="60">
                        <TextBlock Text="🥤" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Напої" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="SearchBtn" Grid.Column="2" Style="{StaticResource NavButtonStyle}"
                           Checked="SearchBtn_Checked" GroupName="NavButtons">
                    <StackPanel Orientation="Vertical" Margin="5,4" Width="60">
                        <TextBlock Text="🔍" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Пошук" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="FavoritesBtn" Grid.Column="3" Style="{StaticResource NavButtonStyle}"
                           Checked="FavoritesBtn_Checked" GroupName="NavButtons">
                    <StackPanel Orientation="Vertical" Margin="5,4" Width="60">
                        <TextBlock Text="❤️" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Обране" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="ProfileBtn" Grid.Column="4" Style="{StaticResource NavButtonStyle}"
                           Checked="ProfileBtn_Checked" GroupName="NavButtons">
                    <StackPanel Orientation="Vertical" Margin="5,4" Width="60">
                        <TextBlock Text="👤" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Профіль" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </RadioButton>
            </Grid>
        </Border>
    </Grid>
</Window>