<Window x:Class="Savorly.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація - Savorly" Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="White"
        WindowStyle="None"
        AllowsTransparency="True"
        Top="50">

    <Border Background="White" BorderBrush="#E8E8E8" BorderThickness="1" CornerRadius="12">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="White" Padding="0,0,0,20">
                <Grid>
                    <TextBlock Text="Реєстрація" FontSize="24" FontWeight="Bold" 
                              Foreground="#333" HorizontalAlignment="Center"/>
                    <Button Content="✕" Background="Transparent" BorderThickness="0"
                            FontSize="16" Foreground="#666" Width="30" Height="30"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                        <Setter Property="Foreground" Value="#CC5500"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,0,10">
                <StackPanel>
                    <Border Width="80" Height="80" Background="#FFE8D6" CornerRadius="40"
                            HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="👤" FontSize="32" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Ім'я користувача" FontSize="14" FontWeight="SemiBold" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E8E8E8" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="UsernameTextBox" Height="45" FontSize="14" Padding="15"
                                BorderThickness="0" Background="Transparent"
                                VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#333"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                    <TextBlock Text="Email" FontSize="14" FontWeight="SemiBold" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E8E8E8" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="EmailTextBox" Height="45" FontSize="14" Padding="15"
                                BorderThickness="0" Background="Transparent"
                                VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#333"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                    <TextBlock Text="Пароль" FontSize="14" FontWeight="SemiBold" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E8E8E8" BorderThickness="1" Margin="0,0,0,15">
                        <PasswordBox x:Name="PasswordBox" Height="45" FontSize="14" Padding="15"
                                    BorderThickness="0" Background="Transparent"
                                    VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Підтвердження пароля" FontSize="14" FontWeight="SemiBold" 
                              Foreground="#333" Margin="0,0,0,8"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E8E8E8" BorderThickness="1" Margin="0,0,0,20">
                        <PasswordBox x:Name="ConfirmPasswordBox" Height="45" FontSize="14" Padding="15"
                                    BorderThickness="0" Background="Transparent"
                                    VerticalContentAlignment="Center"/>
                    </Border>
                    <Border x:Name="ErrorBorder" Background="#FFF0F0" Padding="15,12" CornerRadius="8" 
                            BorderBrush="#FF6B6B" BorderThickness="1" Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ErrorText" Text="" Foreground="#FF6B6B" FontSize="13" 
                                      TextWrapping="Wrap" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <CheckBox x:Name="TermsCheckBox" FontSize="13" Foreground="#666" Margin="0,0,0,20">
                        <TextBlock TextWrapping="Wrap" MouseDown="TermsText_MouseDown">
                            <Run Text="Я погоджуюсь з "/>
                            <Run Text="умовами використання" Foreground="#CC5500" FontWeight="SemiBold">
                                <Run.Style>
                                    <Style TargetType="Run">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Run.Style>
                            </Run>
                        </TextBlock>
                    </CheckBox>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="2">
                <Button Content="Зареєструватися" Background="#FFE8D6" Foreground="#CC5500"
                        FontSize="16" FontWeight="SemiBold" Height="50" BorderThickness="0"
                        Padding="20,0" Click="RegisterButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Скасувати" Background="White" Foreground="#666"
                        FontSize="14" Height="45" BorderThickness="1" BorderBrush="#E8E8E8"
                        Padding="20,0" Margin="0,15,0,0" Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="13" Foreground="#666">
                    <Run Text="Вже маєте акаунт? "/>
                    <Hyperlink Foreground="#CC5500" FontWeight="SemiBold" Click="LoginHyperlink_Click">
                        Увійти
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>