<Window x:Class="Savorly.Views.EditRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Savorly - Редагувати рецепт" 
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style x:Key="IngredientItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StepItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="30,20" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Назад до моїх рецептів" 
                       Background="Transparent" 
                       BorderThickness="0"
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="#666"
                       HorizontalAlignment="Left" 
                       Click="BackButton_Click"
                       Padding="15,10">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#CC5500"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <Border Background="#FFE8D6" 
                            Width="500" 
                            Height="80" 
                            CornerRadius="40"
                            BorderBrush="#FFD1B2" 
                            BorderThickness="2">
                        <TextBlock Text="✏️ Редагувати рецепт" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="#CC5500"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Внесіть зміни до вашого рецепту" 
                              FontSize="14" 
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Background="White" Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" Margin="0,0,20,0">
                    <StackPanel>
                        <Border Background="#FFF9F5" CornerRadius="12" BorderBrush="#FFE8D6" BorderThickness="1" Margin="0,0,0,20">
                            <StackPanel Margin="25,20">
                                <TextBlock Text="📝 Основна інформація" 
                                          FontSize="20" 
                                          FontWeight="SemiBold" 
                                          Foreground="#333"
                                          Margin="0,0,0,20"/>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="Назва рецепту *" 
                                              FontSize="14" 
                                              FontWeight="SemiBold" 
                                              Foreground="#333"
                                              Margin="0,0,0,8"/>
                                    <TextBox x:Name="TitleTextBox" 
                                            FontSize="16" 
                                            Height="50" 
                                            VerticalContentAlignment="Center"
                                            TextChanged="TitleTextBox_TextChanged">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="White"
                                                                    BorderBrush="#E8E8E8"
                                                                    BorderThickness="1"
                                                                    CornerRadius="8">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                              Margin="15,0"
                                                                              Background="Transparent"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="Короткий опис *" 
                                              FontSize="14" 
                                              FontWeight="SemiBold" 
                                              Foreground="#333"
                                              Margin="0,0,0,8"/>
                                    <TextBox x:Name="ShortDescriptionTextBox" 
                                            FontSize="16" 
                                            Height="50" 
                                            VerticalContentAlignment="Center"
                                            TextChanged="ShortDescriptionTextBox_TextChanged">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="White"
                                                                    BorderBrush="#E8E8E8"
                                                                    BorderThickness="1"
                                                                    CornerRadius="8">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                              Margin="15,0"
                                                                              Background="Transparent"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="Повний опис *" 
                                              FontSize="14" 
                                              FontWeight="SemiBold" 
                                              Foreground="#333"
                                              Margin="0,0,0,8"/>
                                    <TextBox x:Name="DescriptionTextBox" 
                                            FontSize="16" 
                                            Height="120" 
                                            VerticalContentAlignment="Top"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            TextChanged="DescriptionTextBox_TextChanged">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="White"
                                                                    BorderBrush="#E8E8E8"
                                                                    BorderThickness="1"
                                                                    CornerRadius="8">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                              Margin="15,8"
                                                                              Background="Transparent"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Margin="0,0,20,0">
                                        <TextBlock Text="Час приготування (хв) *" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#333"
                                                  Margin="0,0,0,8"/>
                                        <TextBox x:Name="PreparationTimeTextBox" 
                                                FontSize="16" 
                                                Height="50" 
                                                VerticalContentAlignment="Center"
                                                Width="200"
                                                PreviewTextInput="NumberValidationTextBox">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="TextBox">
                                                                <Border Background="White"
                                                                        BorderBrush="#E8E8E8"
                                                                        BorderThickness="1"
                                                                        CornerRadius="8">
                                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                                  Margin="15,0"
                                                                                  Background="Transparent"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Кількість порцій *" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#333"
                                                  Margin="0,0,0,8"/>
                                        <TextBox x:Name="ServingsTextBox" 
                                                FontSize="16" 
                                                Height="50" 
                                                VerticalContentAlignment="Center"
                                                Width="200"
                                                PreviewTextInput="NumberValidationTextBox">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="TextBox">
                                                                <Border Background="White"
                                                                        BorderBrush="#E8E8E8"
                                                                        BorderThickness="1"
                                                                        CornerRadius="8">
                                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                                  Margin="15,0"
                                                                                  Background="Transparent"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Тип рецепту *" 
                                              FontSize="14" 
                                              FontWeight="SemiBold" 
                                              Foreground="#333"
                                              Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="FoodTypeRadio" 
                                                   Content="🍳 Страва" 
                                                   GroupName="RecipeType" 
                                                   IsChecked="True"
                                                   FontSize="14" 
                                                   Margin="0,0,20,0"/>
                                        <RadioButton x:Name="DrinkTypeRadio" 
                                                   Content="🥤 Напій" 
                                                   GroupName="RecipeType"
                                                   FontSize="14"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Зображення (URL)" 
                                              FontSize="14" 
                                              FontWeight="SemiBold" 
                                              Foreground="#333"
                                              Margin="0,0,0,8"/>
                                    <TextBox x:Name="ImagePathTextBox" 
                                            FontSize="16" 
                                            Height="50" 
                                            VerticalContentAlignment="Center"
                                            TextChanged="ImagePathTextBox_TextChanged">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="White"
                                                                    BorderBrush="#E8E8E8"
                                                                    BorderThickness="1"
                                                                    CornerRadius="8">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                              Margin="15,0"
                                                                              Background="Transparent"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <TextBlock Text="Введіть URL зображення для вашого рецепту" 
                                              FontSize="12" 
                                              Foreground="#666"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFF9F5" CornerRadius="12" BorderBrush="#FFE8D6" BorderThickness="1" Margin="0,0,0,20">
                            <StackPanel Margin="25,20">
                                <TextBlock Text="🧅 Інгредієнти" 
                                          FontSize="20" 
                                          FontWeight="SemiBold" 
                                          Foreground="#333"
                                          Margin="0,0,0,20"/>

                                <ListBox x:Name="IngredientsListBox" 
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        ItemContainerStyle="{StaticResource IngredientItemStyle}"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Height="200"
                                        Margin="0,0,0,15">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" 
                                                    Margin="0,0,0,8" 
                                                    CornerRadius="8"
                                                    BorderBrush="#F0F0F0" 
                                                    BorderThickness="1">
                                                <Grid Margin="15,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" 
                                                              Text="{Binding}" 
                                                              FontSize="14"
                                                              VerticalAlignment="Center"
                                                              TextWrapping="Wrap"/>
                                                    <Button Grid.Column="1" 
                                                           Content="✕" 
                                                           Background="Transparent" 
                                                           Foreground="#999"
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           Width="24" 
                                                           Height="24" 
                                                           BorderThickness="0"
                                                           Click="DeleteIngredient_Click"
                                                           Tag="{Binding}">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FFF5F5"/>
                                                                        <Setter Property="Foreground" Value="#FF4444"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="NewIngredientTextBox" 
                                            FontSize="14" 
                                            Height="40" 
                                            VerticalContentAlignment="Center"
                                            Width="300"
                                            KeyDown="NewIngredientTextBox_KeyDown">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="White"
                                                                    BorderBrush="#E8E8E8"
                                                                    BorderThickness="1"
                                                                    CornerRadius="8">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                              Margin="15,0"
                                                                              Background="Transparent"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <Button Content="Додати інгредієнт" 
                                           Background="#FFE8D6" 
                                           Foreground="#CC5500" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Height="40" 
                                           Margin="15,0,0,0" 
                                           BorderThickness="0"
                                           Click="AddIngredient_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFF9F5" CornerRadius="12" BorderBrush="#FFE8D6" BorderThickness="1">
                            <StackPanel Margin="25,20">
                                <TextBlock Text="👨‍🍳 Кроки приготування" 
                                          FontSize="20" 
                                          FontWeight="SemiBold" 
                                          Foreground="#333"
                                          Margin="0,0,0,20"/>

                                <ListBox x:Name="StepsListBox" 
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        ItemContainerStyle="{StaticResource StepItemStyle}"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Height="200"
                                        Margin="0,0,0,15">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" 
                                                    Margin="0,0,0,8" 
                                                    CornerRadius="8"
                                                    BorderBrush="#F0F0F0" 
                                                    BorderThickness="1">
                                                <Grid Margin="15,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" 
                                                              Text="{Binding StepNumber}" 
                                                              FontSize="14"
                                                              FontWeight="SemiBold"
                                                              Foreground="#CC5500"
                                                              VerticalAlignment="Center"
                                                              Margin="0,0,10,0"/>

                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding Instruction}" 
                                                              FontSize="14"
                                                              VerticalAlignment="Center"
                                                              TextWrapping="Wrap"/>

                                                    <Button Grid.Column="2" 
                                                           Content="✕" 
                                                           Background="Transparent" 
                                                           Foreground="#999"
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           Width="24" 
                                                           Height="24" 
                                                           BorderThickness="0"
                                                           Click="DeleteStep_Click"
                                                           Tag="{Binding}">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FFF5F5"/>
                                                                        <Setter Property="Foreground" Value="#FF4444"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel>
                                    <TextBox x:Name="NewStepTextBox" 
                                            FontSize="14" 
                                            Height="80" 
                                            VerticalContentAlignment="Top"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            KeyDown="NewStepTextBox_KeyDown">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="White"
                                                                    BorderBrush="#E8E8E8"
                                                                    BorderThickness="1"
                                                                    CornerRadius="8">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                              Margin="15,8"
                                                                              Background="Transparent"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <Button Content="Додати крок" 
                                           Background="#FFE8D6" 
                                           Foreground="#CC5500" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Height="40" 
                                           Margin="0,15,0,0" 
                                           BorderThickness="0"
                                           Click="AddStep_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#F8F9FA" BorderBrush="#E8E8E8" BorderThickness="1,0,0,0">
                    <StackPanel Margin="25">
                        <Border Background="#FFF9F5" CornerRadius="12" BorderBrush="#FFE8D6" BorderThickness="1" Margin="0,0,0,25">
                            <StackPanel Margin="25,20">
                                <TextBlock Text="👁️ Попередній перегляд" 
                                          FontSize="18" 
                                          FontWeight="SemiBold" 
                                          Foreground="#333"
                                          Margin="0,0,0,15"/>

                                <Border Background="White" 
                                        CornerRadius="8" 
                                        BorderBrush="#E8E8E8" 
                                        BorderThickness="1"
                                        Height="120"
                                        Margin="0,0,0,15">
                                    <Grid>
                                        <Image x:Name="PreviewImage" 
                                              Stretch="UniformToFill"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=ImagePathTextBox}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Text, ElementName=ImagePathTextBox}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="🖼️" 
                                                  FontSize="32"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=ImagePathTextBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Text, ElementName=ImagePathTextBox}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Text, ElementName=ImagePathTextBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <TextBlock x:Name="PreviewTitleText" 
                                          Text="Назва рецепту" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="#333"
                                          TextWrapping="Wrap"/>

                                <TextBlock x:Name="PreviewDescriptionText" 
                                          Text="Опис рецепту..." 
                                          FontSize="14" 
                                          Foreground="#666"
                                          TextWrapping="Wrap"
                                          Margin="0,5,0,0"
                                          MaxHeight="40"
                                          TextTrimming="CharacterEllipsis"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🕒" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="PreviewTimeText" Text="0" FontSize="12" 
                                                   Margin="6,0,0,0" VerticalAlignment="Center" FontWeight="Medium"/>
                                        <TextBlock Text="хв" FontSize="11" Margin="2,0,15,0" 
                                                   VerticalAlignment="Center" Foreground="#666"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="👥" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="PreviewServingsText" Text="0" FontSize="12" 
                                                   Margin="6,0,0,0" VerticalAlignment="Center" FontWeight="Medium"/>
                                        <TextBlock Text="порц" FontSize="11" Margin="2,0,0,0" 
                                                   VerticalAlignment="Center" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock x:Name="PreviewTypeText" 
                                          Text="🍳 Страва" 
                                          FontSize="12" 
                                          Foreground="#CC5500" 
                                          Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        <StackPanel Margin="0,0,0,25">
                            <Border Background="#FFE8D6" CornerRadius="8" Margin="0,0,0,12">
                                <Button Content="💾 Зберегти зміни" 
                                       Background="Transparent" 
                                       Foreground="#CC5500"
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Height="55" 
                                       BorderThickness="0"
                                       Click="SaveRecipe_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Border>

                            <Border Background="#FFF0E6" CornerRadius="8" Margin="0,0,0,12">
                                <Button Content="🔄 Скинути зміни" 
                                       Background="Transparent" 
                                       Foreground="#CC5500"
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Height="55" 
                                       BorderThickness="0"
                                       Click="ResetForm_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Border>

                            <Border Background="White" CornerRadius="8" BorderBrush="#E8E8E8" BorderThickness="1">
                                <Button Content="❌ Скасувати" 
                                       Background="Transparent" 
                                       Foreground="#666"
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Height="50" 
                                       BorderThickness="0"
                                       Click="CancelButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Border>
                        </StackPanel>
                        <Border x:Name="ValidationBorder" 
                               Background="#FFF5F5" 
                               CornerRadius="8" 
                               BorderBrush="#FFCCCC" 
                               BorderThickness="1"
                               Visibility="Collapsed"
                               Margin="0,0,0,25">
                            <StackPanel Margin="15,12">
                                <TextBlock Text="⚠️ Виправте наступні помилки:" 
                                          FontSize="14" 
                                          FontWeight="SemiBold" 
                                          Foreground="#CC0000"
                                          Margin="0,0,0,8"/>
                                <TextBlock x:Name="ValidationMessageText" 
                                          FontSize="13" 
                                          Foreground="#CC0000" 
                                          TextWrapping="Wrap"
                                          LineHeight="18"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFF9F5" CornerRadius="12" BorderBrush="#FFE8D6" BorderThickness="1">
                            <StackPanel Margin="25,20">
                                <TextBlock Text="💡 Поради" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="#333"
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="• Додавайте інгредієнти по одному
• Описуйте кроки детально
• Використовуйте якісні зображення
• Перевіряйте час приготування"
                                          FontSize="14" 
                                          Foreground="#666" 
                                          TextWrapping="Wrap"
                                          LineHeight="20"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>