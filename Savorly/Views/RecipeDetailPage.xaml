<Page x:Class="Savorly.Views.RecipeDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Деталі рецепту" 
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="White" Padding="20,15">
                    <Button x:Name="BackButton" Content="← Назад до рецептів" 
                            Background="Transparent" BorderThickness="0"
                            FontSize="16" FontWeight="SemiBold" Foreground="#666"
                            HorizontalAlignment="Left" Padding="15,8"
                            Click="BackButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                        <Setter Property="Foreground" Value="#CC5500"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border Grid.Row="1" Background="White">
                    <Grid>
                        <Image Source="{Binding ImagePath}" 
                               Stretch="UniformToFill" 
                               Height="350" 
                               Margin="40,0"/>
                        <Border Background="White" Margin="40,317,40,-43" 
                                BorderBrush="#E8E8E8" BorderThickness="1" 
                                CornerRadius="12,12,0,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Opacity="0.1" BlurRadius="20"/>
                            </Border.Effect>
                            <StackPanel Margin="25,20">
                                <TextBlock Text="{Binding Title}" FontSize="28" FontWeight="Bold" 
                                           TextWrapping="Wrap" Foreground="#333" LineHeight="32"/>

                                <TextBlock Text="{Binding ShortDescription}" 
                                           FontSize="14" Foreground="#666" 
                                           Margin="0,8,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                <Border Grid.Row="2" Background="White" Margin="40,0" Padding="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="🕒" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Час приготування" FontSize="12" Foreground="#666" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding PreparationTime, StringFormat='{}{0} хв'}" 
                                       FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Кількість порцій" FontSize="12" Foreground="#666" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Servings, StringFormat='{}{0} порц'}" 
                                       FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <Button Content="📝 До записника" Background="#CC5500" Foreground="White" 
                                    FontSize="12" FontWeight="SemiBold" BorderThickness="0" 
                                    Height="36" Padding="15,0" Click="AddToNotebookBtn_Click"
                                    Margin="0,0,0,8"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Grid.Row="3" Background="White" Margin="40,0" Padding="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Опис рецепту" FontSize="20" FontWeight="SemiBold" 
                                   Foreground="#333" Margin="0,0,0,15"/>
                        <TextBlock Text="{Binding Description}" 
                                   FontSize="14" Foreground="#666" TextWrapping="Wrap" LineHeight="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Background="White" Margin="40,0" Padding="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Складові" FontSize="20" FontWeight="SemiBold" 
                                   Foreground="#333" Margin="0,0,0,15"/>
                        <Border Background="#F8F9FA" Padding="15,12" CornerRadius="8" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Кількість порцій" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                                <TextBlock Text="{Binding Servings, StringFormat='{}{0}'}" FontSize="14" FontWeight="Bold" Foreground="#CC5500" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ItemsControl x:Name="IngredientsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,12">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="15" FontWeight="Medium" 
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                <Border Grid.Row="5" Background="White" Margin="40,0" Padding="0,0,0,40">
                    <StackPanel>
                        <TextBlock Text="Приготування" FontSize="20" FontWeight="SemiBold" 
                                   Foreground="#333" Margin="0,0,0,15"/>

                        <ItemsControl x:Name="StepsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" Margin="0,0,0,15" Padding="20,15" CornerRadius="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#CC5500" Width="32" Height="32" 
                                                    CornerRadius="16" Margin="0,0,15,0">
                                                <TextBlock Text="{Binding StepNumber}" 
                                                           FontSize="14" FontWeight="Bold" Foreground="White"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Instruction}" 
                                                           FontSize="14" TextWrapping="Wrap" 
                                                           VerticalAlignment="Center" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
        <Border Grid.Column="1" Background="#F8F9FA" BorderBrush="#E8E8E8" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1">
                    <TextBlock Text="Коментарі" FontSize="18" FontWeight="SemiBold" Foreground="#333"/>
                </Border>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="CommentsPanel" Margin="20,15">
                    </StackPanel>
                </ScrollViewer>
                <Border Grid.Row="2" Background="White" Padding="20,15" BorderBrush="#E8E8E8" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBox x:Name="CommentTextBox" 
                                 FontSize="13" 
                                 Height="40" 
                                 Padding="12"
                                 BorderBrush="#E8E8E8" 
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  Padding="{TemplateBinding Padding}"
                                                                  Background="Transparent"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <TextBlock Text="Написати коментар..." 
                                   FontSize="13" 
                                   Foreground="#999" 
                                   Margin="12,-33,0,0"
                                   HorizontalAlignment="Left"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=CommentTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <Button Content="Написати коментар" 
                                Background="#CC5500" 
                                Foreground="White" 
                                FontSize="13" 
                                FontWeight="SemiBold"
                                Height="36" 
                                Margin="0,10,0,0" 
                                BorderThickness="0"
                                Click="AddComment_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>